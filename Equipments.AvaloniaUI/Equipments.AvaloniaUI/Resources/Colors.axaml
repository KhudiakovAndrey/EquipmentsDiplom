<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					>


	<Design.PreviewWith>
		<Border Width="300" Padding="20" >
			<WrapPanel >
				<WrapPanel.Styles>
					<Style Selector="Border">
						<Setter Property="CornerRadius" Value="5"/>
						<Setter Property="Width" Value="30"/>
						<Setter Property="Height" Value="30"/>
						<Setter Property="Margin" Value="5 0 0 0"/>
					</Style>
				</WrapPanel.Styles>

				<Border CornerRadius="5" Background="{StaticResource Close}"/>
				<Border CornerRadius="5" Background="{DynamicResource BaseTheme}"/>


			</WrapPanel>
		</Border>
	</Design.PreviewWith>

	<SolidColorBrush x:Key="Close">#fc0027</SolidColorBrush>
	<SolidColorBrush x:Key="Accent">#f7630c</SolidColorBrush>

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="BaseTheme">#f9f0f1</SolidColorBrush>
			<SolidColorBrush x:Key="SecondaryRowBackgroundBrush">#F5F5F5</SolidColorBrush>
		</ResourceDictionary>
		<ResourceDictionary x:Key="Dark">
			<SolidColorBrush x:Key="BaseTheme">#202020</SolidColorBrush>
			<SolidColorBrush x:Key="SecondaryRowBackgroundBrush">#424242</SolidColorBrush>

		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>