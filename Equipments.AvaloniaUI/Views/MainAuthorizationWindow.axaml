<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="clr-namespace:Equipments.AvaloniaUI.ViewModels"
        xmlns:views="clr-namespace:Equipments.AvaloniaUI.Views"
		mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
		Width="600" Height="500"
        x:Class="Equipments.AvaloniaUI.Views.MainAuthorizationWindow"
		x:DataType="vm:MainAuthorizationViewModel"
        Title="MainAuthorizationWindow">
	<Window.Styles>
		<Style Selector="Carousel.views-container">
			<Setter Property="Height" Value="400"/>
			<Setter Property="Width" Value="300"/>
		</Style>
	</Window.Styles>
	<Grid>
		<Carousel Classes="views-container"
				  SelectedItem="{Binding SelectedView}"
				  ItemsSource="{Binding Views}">
			<Carousel.PageTransition>
				<CompositePageTransition>
					<PageSlide Duration="0:00:00.3"
							   Orientation="Horizontal"/>
				</CompositePageTransition>
			</Carousel.PageTransition>
		</Carousel>
		<ToggleSwitch VerticalAlignment="Bottom"
					  Command="{Binding ChangeThemeCommand}">Дневной режим</ToggleSwitch>
	</Grid>
</Window>
